<h1>Edit Single Figure</h1>

<form action="/figures" method="POST">
  <input name="_method" type="hidden" value="patch" />
  <label>Figure Name</label>
    <br></br>
      <input type="text" id="figure[name]"></input>

    <br></br>
    <label>Titles:</label>
    <br></br>
  <% Title.all.each do |title| %>
     <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
       <label><%= title.name %></label>
     </input>
  <% end %>

  <label>Create New title</label>
    <br></br>
      <input type="text" id="title[name]"></input>
    <br></br>

    <label>Landmarks:</label>
    <br></br>

  <% Landmark.all.each do |landmark| %>
         <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
           <label><%= landmark.name %></label>
         </input>
  <% end %>

  <br></br>

  <label>Create New Landmark</label>
    <br></br>
      <input type="text" id="landmark[name]"></input>
      <input type="text" id="landmark[year_completed]"></input>

    <br></br>

    <br></br>
      <input type="submit" value="Edit Figure">

</form>
